# Шаблон переменных окружения для продакшена
# Скопируйте этот файл в .env.prod и замените значения на реальные

# Основные настройки
NODE_ENV=production
PORT=3000

# MongoDB (ОБЯЗАТЕЛЬНО ИЗМЕНИТЕ!)
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=your-strong-password-here
MONGO_DATABASE=translator_db
MONGODB_URI=mongodb://admin:your-strong-password-here@mongodb:27017/translator_db?authSource=admin

# OpenAI API (ОБЯЗАТЕЛЬНО УКАЖИТЕ!)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini
OPENAI_BASE_URL=https://api.openai.com/v1

# Безопасность (ОБЯЗАТЕЛЬНО ИЗМЕНИТЕ!)
JWT_SECRET=your-jwt-secret-64-chars-minimum
WS_SECRET_TOKEN=your-websocket-secret-token

# Telegram Bot (если используется)
BOT_TOKEN=your-telegram-bot-token-here

# Дополнительные настройки
LOG_LEVEL=warn
MAX_FILE_SIZE=25
REQUEST_TIMEOUT=30000 